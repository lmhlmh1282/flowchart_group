{
  "name": "flowchart_group",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "src/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run start\"  \"wait-on http://localhost:3001 && electron .\" ",
    "start": "vite",
    "vbuild": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.example.flowchartgroup",
    "productName": "Flowchart Group",
    "directories": {
      "output": "build"
    },
    "files": [
        "dist/*",
        "dist/**/*",
        "src/main/*",
        "src/main/**/*",
        "src/preload/*",
        "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "extraMetadata": {
      "type": "commonjs"
    }
  },
  "dependencies": {
    "antd": "^5.24.5",
    "concurrently": "^9.1.2",
    "electron-is-dev": "^3.0.1",
    "mermaid": "^11.6.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-dropzone": "^14.3.8",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.4.1",
    "remark-gfm": "^4.0.1",
    "styled-components": "^6.1.16",
    "wait-on": "^8.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^35.1.2",
    "electron-builder": "^26.0.12",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "vite": "^6.2.0"
  }
}
